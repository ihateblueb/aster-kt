{
	"$schema": "https://swc.rs/schema.json",
	"jsc": {
		"parser": {
			"syntax": "typescript",
			"dynamicImport": true,
			"decorators": true,
			"tsx": true
		},
		"transform": {
			"legacyDecorator": true,
			"decoratorMetadata": true,
			"optimizer": {
				"simplify": true
			},
		},
		"experimental": {
			"keepImportAssertions": true
		},
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"]
		},
		"target": "es2020"
	},
	"sourceMaps": "inline"
}
